{
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "lineWidth": 80,
    "useTabs": false,
    "indentWidth": 6,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "ignore": [
      "dist",
      "node_modules"
    ],
    "rules": {}
  },
  "workspace": {
    "members": [
      "apps/*",
      "packages/*"
    ]
  }
}